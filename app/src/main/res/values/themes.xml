<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SharesTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_blue</item>
        <item name="colorSecondaryVariant">@color/gray</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.SharesTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Text">
        <item name="fontFamily">Montserrat</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineHeight">16dp</item>
    </style>

    <style name="Text.Header">
        <item name="android:textSize">29sp</item>
        <item name="android:lineHeight">34dp</item>
    </style>

    <style name="Text.Gray">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:lineHeight">24dp</item>
    </style>

    <style name="Text.Header.Little">
        <item name="android:textSize">19sp</item>
        <item name="android:lineHeight">24dp</item>
    </style>

    <style name="Text.SubHeader">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Text.Green">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="Theme.SharesTracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SharesTracker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>